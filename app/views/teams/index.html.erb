<% provide(:title, 'All teams') %>

<%=
  link_to 'Download data as Excel',
          teams_path(format: :xlsx)
%>

<h1>All teams</h1>

<div class="row">
  <div class="col-md-12">
    <%= will_paginate %>

    <table class="tg">
      <td><%= link_to "Team Name", teams_path(:sort => "name") %></td>
      <td>No. of Students</td>
      <td>Team Leader</td>
      <td><%= link_to "Project Assigned", teams_path(:sort => "assigned") %></td>
      <td><%= "Project Preferences Filled?" %></td>
      <td>Options</td>
      <td><%= link_to "View Selections", teams_path(:sort => "name") %></td>

      <%= render @teams %>
    </table>

    <%= will_paginate %>

  </div>
</div>
