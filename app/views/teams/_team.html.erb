<tr>

  <td><%= link_to team.name, team %></td>
  <td><%= @counts[team.id] %></td>
  <% if current_user.admin? %>
    <td><%= @leaders[team.id].firstname + " " + @leaders[team.id].lastname %></td>


    <td><%= @status[team.id] %></td>
    <td><%= raw(@preferences[team.id]) %></td>
    <td class="options"><%= link_to "Edit", edit_team_path(team) %>| <%= link_to "Delete", team, method: :delete,
                                                                                data: {confirm: "You sure?"} %></td>
    <td><%= link_to "Project Preferences", :controller => :teams, :action => :show_pref %></td>
  
    
  <% end %>
</tr>
